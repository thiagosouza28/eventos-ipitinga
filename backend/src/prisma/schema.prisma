generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}


datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model District {
  id            String         @id @default(cuid())
  name          String         @unique
  pastorName    String?
  createdAt     DateTime       @default(now())
  churches      Church[]
  users         User[]         @relation("DistrictUsers")
  registrations Registration[]
}


model Church {
  id                String         @id @default(cuid())
  name              String
  districtId        String
  directorName      String?
  directorCpf       String?
  directorBirthDate DateTime?
  directorEmail     String?
  directorWhatsapp  String?
  directorPhotoUrl  String?        @db.LongText
  createdAt         DateTime       @default(now())
  district          District       @relation(fields: [districtId], references: [id])
  users             User[]         @relation("ChurchUsers")
  registrations     Registration[]

  @@unique([name, districtId])
  @@index([districtId])
}


model Event {
  id             String         @id @default(cuid())
  title          String
  description    String
  startDate      DateTime
  endDate        DateTime
  location       String
  bannerUrl      String?
  priceCents     Int            @default(0)
  minAgeYears    Int?
  isFree         Boolean        @default(false)
  isActive       Boolean        @default(true)
  slug           String         @unique
  paymentMethods String         @default("PIX_MP")
  pendingPaymentValueRule String @default("KEEP_ORIGINAL")
  createdAt      DateTime       @default(now())
  ministryId     String?
  orders         Order[]
  registrations  Registration[]
  lots           EventLot[]
  expenses       Expense[]
  ministry       Ministry?      @relation(fields: [ministryId], references: [id])

  @@index([ministryId])

}

model Order {
  id                     String         @id @default(cuid())
  eventId                String
  buyerCpf               String
  totalCents             Int
  status                 String         @default("PENDING")
  paymentMethod          String         @default("PIX_MP")
  mpPaymentId            String?
  mpPreferenceId         String?
  preferenceVersion      Int            @default(0)
  pricingLotId           String?
  externalReference      String         @unique
  expiresAt              DateTime
  paidAt                 DateTime?
  manualPaymentReference String?
  feeCents               Int            @default(0)
  netAmountCents         Int            @default(0)
  createdAt              DateTime       @default(now())
  event                  Event          @relation(fields: [eventId], references: [id])
  pricingLot             EventLot?      @relation(fields: [pricingLotId], references: [id])
  registrations          Registration[]
  refunds                Refund[]
  webhookEvents          WebhookEvent[]

  @@index([eventId])
  @@index([buyerCpf])
  @@index([status])
}


model Registration {
  id            String    @id @default(cuid())
  orderId       String
  eventId       String
  ministryId    String?
  fullName      String
  cpf           String
  birthDate     DateTime
  ageYears      Int
  priceCents    Int       @default(0)
  districtId    String
  churchId      String
  photoUrl      String?   @db.LongText
  gender        String?
  paymentMethod String?
  status        String    @default("DRAFT")
  receiptPdfUrl String?
  checkinAt     DateTime?
  paidAt        DateTime?
  createdAt     DateTime  @default(now())
  order         Order     @relation(fields: [orderId], references: [id])
  event         Event     @relation(fields: [eventId], references: [id])
  ministry      Ministry? @relation(fields: [ministryId], references: [id])
  district      District  @relation(fields: [districtId], references: [id])
  church        Church    @relation(fields: [churchId], references: [id])
  refunds       Refund[]

  @@unique([eventId, cpf])
  @@index([orderId])
  @@index([eventId])
  @@index([cpf])
  @@index([status])
}


model Refund {
  id             String       @id @default(cuid())
  orderId        String
  registrationId String
  amountCents    Int
  mpRefundId     String
  reason         String?
  createdAt      DateTime     @default(now())
  order          Order        @relation(fields: [orderId], references: [id])
  registration   Registration @relation(fields: [registrationId], references: [id])
}


model WebhookEvent {
  id             String    @id @default(cuid())
  provider       String
  eventType      String
  payloadJson    String
  idempotencyKey String    @unique
  processedAt    DateTime?
  createdAt      DateTime  @default(now())
  orderId        String?
  order          Order?    @relation(fields: [orderId], references: [id])
}


model AuditLog {
  id           String   @id @default(cuid())
  actorUserId  String?
  action       String
  entity       String
  entityId     String
  metadataJson String?  @db.LongText
  createdAt    DateTime @default(now())
  actor        User?    @relation(fields: [actorUserId], references: [id])
}


model User {
  id                 String         @id @default(cuid())
  name               String
  cpf                String?        @unique
  phone              String?
  photoUrl           String?        @db.LongText
  email              String         @unique
  passwordHash       String
  role               String
  districtScopeId    String?
  mustChangePassword Boolean        @default(false)
  churchScopeId      String?
  profileId          String?
  status             UserStatus     @default(ACTIVE)
  createdAt          DateTime       @default(now())
  districtScope      District?      @relation("DistrictUsers", fields: [districtScopeId], references: [id])
  churchScope        Church?        @relation("ChurchUsers", fields: [churchScopeId], references: [id])
  auditLogs          AuditLog[]
  ministries         MinistryUser[]
  profile            Profile?       @relation(fields: [profileId], references: [id])

  @@index([profileId])
}

model EventLot {
  id         String    @id @default(cuid())
  eventId    String
  name       String
  priceCents Int
  startsAt   DateTime
  endsAt     DateTime?
  createdAt  DateTime  @default(now())
  event      Event     @relation(fields: [eventId], references: [id])
  orders     Order[]

  @@unique([eventId, name])
  @@index([eventId])
}


model Expense {
  id          String    @id @default(cuid())
  eventId     String
  description String
  date        DateTime
  amountCents Int
  madeBy      String
  items       String?
  receiptUrl  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  event       Event     @relation(fields: [eventId], references: [id])

  @@index([eventId])
  @@index([date])
}




model Ministry {
  id          String          @id @default(cuid())
  name        String          @unique
  description String?
  isActive    Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  events      Event[]
  registrations Registration[]
  users       MinistryUser[]
}


model MinistryUser {
  userId     String
  ministryId String
  assignedAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  ministry   Ministry @relation(fields: [ministryId], references: [id])

  @@id([userId, ministryId])
  @@index([ministryId])
}

model Profile {
  id          String              @id @default(cuid())
  name        String              @unique
  description String?
  isActive    Boolean             @default(true)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  permissions ProfilePermission[]
  users       User[]
}

model ProfilePermission {
  id            String   @id @default(cuid())
  profileId     String
  module        String
  canView       Boolean  @default(false)
  canCreate     Boolean  @default(false)
  canEdit       Boolean  @default(false)
  canDelete     Boolean  @default(false)
  canApprove    Boolean  @default(false)
  canDeactivate Boolean  @default(false)
  canReport     Boolean  @default(false)
  canFinancial  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  profile       Profile  @relation(fields: [profileId], references: [id])

  @@unique([profileId, module])
  @@index([profileId])
}

enum UserStatus {
  ACTIVE
  INACTIVE
}







