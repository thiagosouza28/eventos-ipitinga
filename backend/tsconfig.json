{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveSymlinks": false,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["src/*", "dist/*"]
    }
  },
  "include": ["src", "scripts", "test"],
  "exclude": ["node_modules", "dist"]
}
