{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2021"],
    "preserveSymlinks": false
  },
  "include": ["src"],
  "exclude": ["test", "**/*.spec.ts", "**/*.test.ts", "scripts", "prisma/seed.ts"]
}
