generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model District {
  id            String         @id @default(cuid())
  name          String         @unique
  pastorName    String?
  createdAt     DateTime       @default(now())
  churches      Church[]
  events        Event[]
  registrations Registration[]
  users         User[]         @relation("DistrictUsers")
  orders        Order[]
  transfers     Transfer[]
}

model Church {
  id                String         @id @default(cuid())
  name              String
  districtId        String
  directorName      String?
  directorCpf       String?
  directorBirthDate DateTime?
  directorEmail     String?
  directorWhatsapp  String?
  directorPhotoUrl  String?        @db.LongText
  createdAt         DateTime       @default(now())
  district          District       @relation(fields: [districtId], references: [id])
  registrations     Registration[]
  users             User[]         @relation("ChurchUsers")
  events            Event[]

  @@unique([name, districtId])
  @@index([districtId])
}

model Event {
  id                      String         @id @default(cuid())
  title                   String
  description             String
  startDate               DateTime
  endDate                 DateTime
  location                String
  bannerUrl               String?
  priceCents              Int            @default(0)
  minAgeYears             Int?
  isFree                  Boolean        @default(false)
  isActive                Boolean        @default(true)
  slug                    String         @unique
  paymentMethods          String         @default("PIX_MP")
  pendingPaymentValueRule String         @default("KEEP_ORIGINAL")
  createdAt               DateTime       @default(now())
  ministryId              String?
  createdById             String?
  districtId              String
  churchId                String?
  createdBy               User?          @relation("EventCreators", fields: [createdById], references: [id])
  ministry                Ministry?      @relation(fields: [ministryId], references: [id])
  district                District       @relation(fields: [districtId], references: [id])
  church                  Church?        @relation(fields: [churchId], references: [id])
  lots                    EventLot[]
  expenses                Expense[]
  orders                  Order[]
  registrations           Registration[]

  @@index([ministryId])
  @@index([createdById], map: "Event_createdById_fkey")
  @@index([districtId])
  @@index([churchId])
}

model Order {
  id                     String         @id @default(cuid())
  eventId                String
  buyerCpf               String
  totalCents             Int
  status                 String         @default("PENDING")
  paymentMethod          String         @default("PIX_MP")
  mpPaymentId            String?
  mpPreferenceId         String?
  preferenceVersion      Int            @default(0)
  pricingLotId           String?
  externalReference      String         @unique
  expiresAt              DateTime
  paidAt                 DateTime?
  manualPaymentReference String?
  manualPaymentProofUrl  String?        @db.LongText
  feeCents               Int            @default(0)
  netAmountCents         Int            @default(0)
  origin                 OrderOrigin    @default(MARKETPLACE)
  responsibleName        String?
  responsibleDocument    String?
  responsibleEmail       String?
  responsiblePhone       String?
  amountReceivedCents    Int?
  manualNotes            String?        @db.LongText
  confirmedById          String?
  confirmedAt            DateTime?
  districtId             String?
  districtAdminId        String?
  responsibleUserId      String?
  amountToTransfer       Int            @default(0)
  transferStatus         OrderTransferStatus?
  transferBatchId        String?
  createdAt              DateTime       @default(now())
  event                  Event          @relation(fields: [eventId], references: [id])
  pricingLot             EventLot?      @relation(fields: [pricingLotId], references: [id])
  refunds                Refund[]
  registrations          Registration[]
  webhookEvents          WebhookEvent[]
  items                  OrderItem[]
  serviceOrders          ServiceOrder[]
  confirmedBy            User?          @relation("ManualOrderConfirmedBy", fields: [confirmedById], references: [id])
  district               District?      @relation(fields: [districtId], references: [id])
  districtAdmin          User?          @relation("OrderDistrictAdmin", fields: [districtAdminId], references: [id])
  responsibleUser        User?          @relation("OrderResponsibleUser", fields: [responsibleUserId], references: [id])
  transferBatch          Transfer?      @relation("TransferOrders", fields: [transferBatchId], references: [id])

  @@index([eventId])
  @@index([buyerCpf])
  @@index([status])
  @@index([pricingLotId], map: "Order_pricingLotId_fkey")
  @@index([origin])
  @@index([confirmedById])
  @@index([districtId])
  @@index([districtAdminId])
  @@index([responsibleUserId])
  @@index([transferStatus])
  @@index([transferBatchId])
}

model Registration {
  id            String    @id @default(cuid())
  orderId       String
  eventId       String
  fullName      String
  cpf           String
  birthDate     DateTime
  ageYears      Int
  priceCents    Int       @default(0)
  districtId    String
  churchId      String
  responsibleUserId String?
  photoUrl      String?   @db.LongText
  gender        String?
  paymentMethod String?
  status        String    @default("DRAFT")
  receiptPdfUrl String?
  checkinAt     DateTime?
  paidAt        DateTime?
  createdAt     DateTime  @default(now())
  ministryId    String?
  refunds       Refund[]
  church        Church    @relation(fields: [churchId], references: [id])
  district      District  @relation(fields: [districtId], references: [id])
  event         Event     @relation(fields: [eventId], references: [id])
  ministry      Ministry? @relation(fields: [ministryId], references: [id])
  order         Order     @relation(fields: [orderId], references: [id])
  responsibleUser User?    @relation("RegistrationResponsibleUser", fields: [responsibleUserId], references: [id])
  orderItems    OrderItem[]

  @@unique([eventId, cpf])
  @@index([orderId])
  @@index([eventId])
  @@index([cpf])
  @@index([status])
  @@index([churchId], map: "Registration_churchId_fkey")
  @@index([districtId], map: "Registration_districtId_fkey")
  @@index([ministryId], map: "Registration_ministryId_fkey")
  @@index([responsibleUserId])
}

model Refund {
  id             String       @id @default(cuid())
  orderId        String
  registrationId String
  amountCents    Int
  mpRefundId     String
  reason         String?
  createdAt      DateTime     @default(now())
  order          Order        @relation(fields: [orderId], references: [id])
  registration   Registration @relation(fields: [registrationId], references: [id])

  @@index([orderId], map: "Refund_orderId_fkey")
  @@index([registrationId], map: "Refund_registrationId_fkey")
}

model WebhookEvent {
  id             String    @id @default(cuid())
  provider       String
  eventType      String
  payloadJson    String
  idempotencyKey String    @unique
  processedAt    DateTime?
  createdAt      DateTime  @default(now())
  orderId        String?
  order          Order?    @relation(fields: [orderId], references: [id])

  @@index([orderId], map: "WebhookEvent_orderId_fkey")
}

model AuditLog {
  id           String   @id @default(cuid())
  actorUserId  String?
  action       String
  entity       String
  entityId     String
  metadataJson String?  @db.LongText
  createdAt    DateTime @default(now())
  actor        User?    @relation(fields: [actorUserId], references: [id])

  @@index([actorUserId], map: "AuditLog_actorUserId_fkey")
}

model User {
  id                   String           @id @default(cuid())
  name                 String
  email                String           @unique
  passwordHash         String
  role                 String
  districtScopeId      String?
  churchId             String?          @map("churchScopeId")
  ministryId           String?
  createdAt            DateTime         @default(now())
  cpf                  String?          @unique
  isTemporaryPassword  Boolean          @default(false) @map("mustChangePassword")
  passwordUpdatedAt    DateTime?
  phone                String?
  photoUrl             String?          @db.LongText
  profileId            String?
  status               UserStatus       @default(ACTIVE)
  pixType              PixType?
  pixKey               String?
  pixOwnerName         String?
  pixOwnerDocument     String?
  pixBankName          String?
  pixStatus            PixStatus        @default(PENDING)
  auditLogs            AuditLog[]
  eventsCreated        Event[]          @relation("EventCreators")
  ministries           MinistryUser[]
  systemConfigsUpdated SystemConfig[]   @relation("SystemConfigUpdatedBy")
  church               Church?          @relation("ChurchUsers", fields: [churchId], references: [id])
  districtScope        District?        @relation("DistrictUsers", fields: [districtScopeId], references: [id])
  primaryMinistry      Ministry?        @relation("UserPrimaryMinistry", fields: [ministryId], references: [id])
  profile              Profile?         @relation(fields: [profileId], references: [id])
  permissionsOverride  UserPermission[]
  confirmedManualOrders Order[]          @relation("ManualOrderConfirmedBy")
  confirmedOrderItems  OrderItem[]       @relation("OrderItemConfirmedBy")
  issuedServiceOrders  ServiceOrder[]    @relation("ServiceOrderIssuedBy")
  districtOrders       Order[]           @relation("OrderDistrictAdmin")
  responsibleOrders    Order[]           @relation("OrderResponsibleUser")
  responsibleRegistrations Registration[] @relation("RegistrationResponsibleUser")
  transfersCreated     Transfer[]        @relation("TransferCreatedBy")
  districtTransfers    Transfer[]        @relation("TransferDistrictAdmin")
  responsibleTransfers Transfer[]        @relation("TransferResponsibleUser")

  @@index([profileId])
  @@index([churchId], map: "User_churchScopeId_fkey")
  @@index([districtScopeId], map: "User_districtScopeId_fkey")
  @@index([ministryId])
}

model SystemConfig {
  id          String   @id @default(cuid())
  settings    Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  updatedById String?
  updatedBy   User?    @relation("SystemConfigUpdatedBy", fields: [updatedById], references: [id])

  @@index([updatedById], map: "SystemConfig_updatedById_fkey")
}

model EventLot {
  id         String    @id @default(cuid())
  eventId    String
  name       String
  priceCents Int
  startsAt   DateTime
  endsAt     DateTime?
  createdAt  DateTime  @default(now())
  event      Event     @relation(fields: [eventId], references: [id])
  orders     Order[]

  @@unique([eventId, name])
  @@index([eventId])
}

model Expense {
  id          String   @id @default(cuid())
  eventId     String
  description String
  date        DateTime
  amountCents Int
  madeBy      String
  items       String?
  receiptUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  event       Event    @relation(fields: [eventId], references: [id])

  @@index([eventId])
  @@index([date])
}

model Ministry {
  id            String         @id @default(cuid())
  name          String         @unique
  description   String?
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  events        Event[]
  users         MinistryUser[]
  registrations Registration[]
  primaryUsers  User[]         @relation("UserPrimaryMinistry")
}

model MinistryUser {
  userId     String
  ministryId String
  assignedAt DateTime @default(now())
  ministry   Ministry @relation(fields: [ministryId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@id([userId, ministryId])
  @@index([ministryId])
}

model Profile {
  id          String              @id @default(cuid())
  name        String              @unique
  description String?
  isActive    Boolean             @default(true)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  permissions ProfilePermission[]
  users       User[]
}

model ProfilePermission {
  id            String   @id @default(cuid())
  profileId     String
  module        String
  canView       Boolean  @default(false)
  canCreate     Boolean  @default(false)
  canEdit       Boolean  @default(false)
  canDelete     Boolean  @default(false)
  canApprove    Boolean  @default(false)
  canDeactivate Boolean  @default(false)
  canReport     Boolean  @default(false)
  canFinancial  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  profile       Profile  @relation(fields: [profileId], references: [id])

  @@unique([profileId, module])
  @@index([profileId])
}

model UserPermission {
  id            String   @id @default(cuid())
  userId        String
  module        String
  canView       Boolean  @default(false)
  canCreate     Boolean  @default(false)
  canEdit       Boolean  @default(false)
  canDelete     Boolean  @default(false)
  canApprove    Boolean  @default(false)
  canDeactivate Boolean  @default(false)
  canReport     Boolean  @default(false)
  canFinancial  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id])

  @@unique([userId, module])
  @@index([userId])
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum OrderOrigin {
  MARKETPLACE
  MANUAL
}

enum PixType {
  CPF
  CNPJ
  EMAIL
  PHONE
  EVP
  RANDOM
}

enum PixStatus {
  VALIDATED
  PENDING
}

enum OrderItemStatus {
  PENDING
  CONFIRMED
  CANCELED
}

model OrderItem {
  id             String          @id @default(cuid())
  orderId        String
  registrationId String
  amountCents    Int
  status         OrderItemStatus @default(PENDING)
  notes          String?         @db.LongText
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  confirmedById  String?
  order          Order           @relation(fields: [orderId], references: [id])
  registration   Registration    @relation(fields: [registrationId], references: [id])
  confirmedBy    User?           @relation("OrderItemConfirmedBy", fields: [confirmedById], references: [id])

  @@unique([orderId, registrationId])
  @@index([registrationId])
  @@index([confirmedById])
}

model ServiceOrder {
  id           String   @id @default(cuid())
  orderId      String
  number       Int
  totalCents   Int
  proofUrl     String?  @db.LongText
  pdfUrl       String?  @db.LongText
  notes        String?  @db.LongText
  metadata     Json?
  issuedAt     DateTime @default(now())
  issuedById   String?
  order        Order    @relation(fields: [orderId], references: [id])
  issuedBy     User?    @relation("ServiceOrderIssuedBy", fields: [issuedById], references: [id])

  @@index([orderId])
  @@index([issuedById])
  @@unique([orderId, number])
}

model Transfer {
  id               String         @id @default(cuid())
  districtId       String?
  districtAdminId  String?
  responsibleUserId String?
  amount           Int
  pixType          PixType?
  pixKey           String?
  pixOwnerName     String?
  pixOwnerDocument String?
  pixBankName      String?
  orderIds         Json
  mpTransferId     String?
  status           TransferStatus @default(PENDING)
  errorMessage     String?
  createdById      String?
  createdAt        DateTime       @default(now())
  district         District?      @relation(fields: [districtId], references: [id])
  districtAdmin    User?          @relation("TransferDistrictAdmin", fields: [districtAdminId], references: [id])
  responsibleUser  User?          @relation("TransferResponsibleUser", fields: [responsibleUserId], references: [id])
  createdBy        User?          @relation("TransferCreatedBy", fields: [createdById], references: [id])
  orders           Order[]        @relation("TransferOrders")

  @@index([districtId])
  @@index([districtAdminId])
  @@index([responsibleUserId])
  @@index([status])
}

enum OrderTransferStatus {
  PENDING
  TRANSFERRED
  FAILED
}

enum TransferStatus {
  PENDING
  SUCCESS
  FAILED
}

model PixGatewayConfig {
  id              Int       @id @default(autoincrement())
  provider        String
  clientId        String?
  clientSecret    String?
  apiKey          String?
  webhookUrl      String?
  certificatePath String?
  active          Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
